<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Pipelines_PipeManager::pipelines" title="Pipelines" sortOrder="10">
                    <resource id="Pipelines_PipeManager::pipemanager" title="PipeManager" sortOrder="10">
                        <resource id="Pipelines_PipeManager::listpipelines" title="List Pipelines" sortOrder="10"/>
                        <resource id="Pipelines_PipeManager::searchpipelines" title="Search Pipelines" sortOrder="20"/>
                        <resource id="Pipelines_PipeManager::listruns" title="List Pipeline Runs" sortOrder="30"/>
                        <resource id="Pipelines_PipeManager::searchruns" title="Search Runs" sortOrder="40"/>
                        <resource id="Pipelines_PipeManager::showlogs" title="Show Logs" sortOrder="50"/>
                        <resource id="Pipelines_PipeManager::newrun" title="Stop Run" sortOrder="60"/>
                        <resource id="Pipelines_PipeManager::stoprun" title="Stop Run" sortOrder="70"/>
                        <resource id="Pipelines_PipeManager::deleterun" title="Delete Run" sortOrder="80"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
