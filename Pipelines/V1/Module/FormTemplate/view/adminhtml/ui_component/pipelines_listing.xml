    <dataSource name="pipelines_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Pipelines\FormTemplate\Model\PipelineDataProvider</argument>
            <argument name="name" xsi:type="string">pipelines_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">pipeline_id</argument>
            <argument name="requestFieldName" xsi:type="string">pipeline_id</argument>
            <argument name="data" xsi:type="array"/>
        </argument>
    </dataSource>


    <columns name="pipeline_columns">
        <column name="pipeline_id">
            <settings>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="name">
            <settings>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="author">
            <settings>
                <label translate="true">Author</label>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <label translate="true">Created At</label>
            </settings>
        </column>
    </columns>


