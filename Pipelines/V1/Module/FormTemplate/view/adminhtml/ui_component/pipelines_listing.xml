<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pipelines_listing.pipelines_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">New Pipeline</label>
            </button>
        </buttons>
        <spinner>pipelines_columns</spinner>
        <deps>
            <dep>pipelines_listing.pipelines_listing_data_source</dep>
        </deps>
    </settings>



