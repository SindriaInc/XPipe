        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">pipeline_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Pipelines_FormTemplate::formTemplate</aclResource>
        <dataProvider class="Pipelines\FormTemplate\Ui\Component\Listing\DataProvider" name="pipelines_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>pipeline_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
