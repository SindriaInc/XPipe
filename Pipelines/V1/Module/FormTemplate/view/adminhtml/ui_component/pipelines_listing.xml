<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <!-- JS config per il provider -->
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pipelines_listing.pipelines_listing_data_source</item>
        </item>
    </argument>

    <settings>
        <dataScope>pipelines_listing</dataScope>
        <spinner>pipeline_columns</spinner>
        <deps>
            <dep>pipelines_listing.pipelines_listing_data_source</dep>
        </deps>

        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">New Pipeline</label>
            </button>
        </buttons>
    </settings>

    <listingToolbar name="listing_top">
        <bookmark name="bookmarks" disabled="true"/>
        <columnsControls name="columns_controls" disabled="true"/>
        <filterSearch name="fulltext" disabled="true"/>
        <filters name="listing_filters" disabled="true"/>
        <paging name="listing_paging" disabled="true"/>
        <massaction name="listing_massaction" disabled="true"/>
    </listingToolbar>

    <dataSource name="pipelines_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Pipelines\FormTemplate\Model\PipelineDataProvider</argument>
            <argument name="name" xsi:type="string">pipelines_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">pipeline_id</argument>
            <argument name="requestFieldName" xsi:type="string">pipeline_id</argument>
            <argument name="data" xsi:type="array"/>
        </argument>
    </dataSource>

    <!-- Colonne della tabella -->
    <columns name="pipeline_columns">
        <column name="pipeline_id">
            <settings>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="name">
            <settings>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="author">
            <settings>
                <label translate="true">Author</label>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <label translate="true">Created At</label>
            </settings>
        </column>
    </columns>

</listing>
