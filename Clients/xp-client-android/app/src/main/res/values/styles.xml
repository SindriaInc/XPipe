<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white_cream</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/ic_yellow_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="LogoutButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/ic_positive_button</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/green</item>
        <item name="background">@color/white</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/orange</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white75opacity</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white75opacity</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/ic_casual_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MainTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SmallTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Avatar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:tintMode">src_atop</item>
        <item name="android:tint">@color/black30opacity</item>

    </style>

    <style name="BlueEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_et_backgroud</item>
        <item name="android:ems">10</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white30opacity</item>
        <item name="android:gravity">clip_vertical|center_vertical</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>