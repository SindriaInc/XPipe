<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">requestform_form.requestform_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Iam\RequestForm\Block\Adminhtml\Buttons\SubmitButton"/>
            <button name="back" class="Iam\RequestForm\Block\Adminhtml\Buttons\BackButton"/>
        </buttons>
        <namespace>requestform_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>requestform_form.requestform_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="block_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="requestform/index/submit"/>
        </settings>
        <dataProvider class="Iam\RequestForm\Ui\Component\Form\RequestFormDataProvider" name="requestform_form_data_source">
            <settings>
                <requestFieldName>ticket_id</requestFieldName>
                <primaryFieldName>ticket_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label/>
        </settings>

        <field name="tenant" formElement="input">
<!--            <argument name="data" xsi:type="array">-->
<!--                <item name="config" xsi:type="array">-->
<!--                    <item name="source" xsi:type="string">requestform</item>-->
<!--                </item>-->
<!--            </argument>-->
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>tenant</dataScope>
            </settings>
        </field>

        <field name="username" formElement="input">
<!--                        <argument name="data" xsi:type="array">-->
<!--                            <item name="config" xsi:type="array">-->
<!--                                <item name="source" xsi:type="string">requestform</item>-->
<!--                            </item>-->
<!--                        </argument>-->
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>username</dataScope>
            </settings>
        </field>


        <field name="fullname" formElement="input">
            <!--                        <argument name="data" xsi:type="array">-->
            <!--                            <item name="config" xsi:type="array">-->
            <!--                                <item name="source" xsi:type="string">ticketform</item>-->
            <!--                            </item>-->
            <!--                        </argument>-->
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>fullname</dataScope>
            </settings>
        </field>


        <field name="email" formElement="input">
            <!--                        <argument name="data" xsi:type="array">-->
            <!--                            <item name="config" xsi:type="array">-->
            <!--                                <item name="source" xsi:type="string">ticketform</item>-->
            <!--                            </item>-->
            <!--                        </argument>-->
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>email</dataScope>
            </settings>
        </field>


        <field name="title" sortOrder="20" formElement="input">
<!--            <argument name="data" xsi:type="array">-->
<!--                <item name="config" xsi:type="array">-->
<!--                    <item name="source" xsi:type="string">requestform</item>-->
<!--                </item>-->
<!--            </argument>-->
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>

        <field name="description" sortOrder="21" formElement="textarea">
<!--            <argument name="data" xsi:type="array">-->
<!--                <item name="config" xsi:type="array">-->
<!--                    <item name="source" xsi:type="string">requestform</item>-->
<!--                </item>-->
<!--            </argument>-->
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </field>

        <container name="custom_tab_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="string">22</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <argument name="block" xsi:type="object">Iam\RequestForm\Block\Adminhtml\Editor</argument>
            </htmlContent>
        </container>

    </fieldset>

</form>
